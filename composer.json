{
    "name": "zfegg/psr-mvc",
    "description": "Using MVC for PSR applications, like dotnet core MVC.",
    "keywords": [
        "controller",
        "handler",
        "mvc",
        "psr"
    ],
    "require": {
        "php": ">=8.0",
        "psr/container": "^1.0 || ^2.0",
        "psr/http-server-handler": "^1.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Moln",
            "email": "moln.xie@gmail.com"
        }
    ],
    "require-dev": {
        "laminas/laminas-config-aggregator": "^1.7",
        "laminas/laminas-di": "^3.9",
        "laminas/laminas-diactoros": "^3.0",
        "laminas/laminas-servicemanager": "^3.6 | ^4.0",
        "mezzio/mezzio": "^3.6",
        "mezzio/mezzio-fastroute": "^3.3",
        "mezzio/mezzio-router": "^3.7.0",
        "monolog/monolog": "^2.0 || ^3.0",
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^8.15.0",
        "symfony/property-access": "^5.4 || ^6.0",
        "symfony/serializer": "^5.4 || ^6.0",
        "willdurand/negotiation": "^3.0",
        "zfegg/expressive-test": "^0.7.1"
    },
    "suggest": {
        "symfony/serializer": "Serialize action result required."
    },
    "autoload": {
        "psr-4": {
            "Zfegg\\PsrMvc\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZfeggTest\\PsrMvc\\" : "test/"
        },
        "files": [
            "test/TestAsset/HeadersSent.php"
        ]
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "extra": {
        "laminas": {
            "config-provider": "Zfegg\\PsrMvc\\ConfigProvider"
        },
        "branch-alias": {
            "dev-main": "3.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
