{
    "name": "zfegg/psr-mvc",
    "description": "Reflect callback and convert to psr-server-handler decorator. Automatically inject parameters into callbacks.",
    "keywords": [
        "psr",
        "callable",
        "handler",
        "decorator",
        "reflection"
    ],
    "require": {
        "php": ">=8.0",
        "psr/container": "^1.0",
        "psr/http-server-handler": "^1.0",
        "mezzio/mezzio-router": "^3.7.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Moln",
            "email": "moln.xie@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "slevomat/coding-standard": "^7.0",
        "laminas/laminas-servicemanager": "^3.6",
        "laminas/laminas-diactoros": "^2.5",
        "mezzio/mezzio": "^3.6",
        "mezzio/mezzio-fastroute": "^3.3",
        "laminas/laminas-config-aggregator": "^1.7",
        "symfony/cache": "^5.3",
        "symfony/serializer": "^6.0",
        "willdurand/negotiation": "^3.0",
        "zfegg/expressive-test": "^0.6.1",
        "symfony/property-access": "^6.0"
    },
    "suggest": {
        "symfony/serializer": "Auto serialize required."
    },
    "autoload": {
        "psr-4": {
            "Zfegg\\PsrMvc\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZfeggTest\\PsrMvc\\" : "test/"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "extra": {
        "laminas": {
            "config-provider": "Zfegg\\PsrMvc\\ConfigProvider"
        }
    }
}
